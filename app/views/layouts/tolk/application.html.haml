!!!
%html{:lang => Tolk::Locale.primary_locale_name}
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Tolk
    = javascript_include_tag "tolk/application"
    = stylesheet_link_tag "tolk/application"
    = yield :head
  %body
    #container
      #head
        %h1
          %span.home= link_to "Tolk", root_path
          - if @locale.present?
            %span.locale= link_to @locale.language_name, locale_path(@locale)
      = yield
    :javascript
      $$('td textarea').each(function(element) {
        element.setStyle({height: element.up('td').getDimensions().height+'px'});
      });
